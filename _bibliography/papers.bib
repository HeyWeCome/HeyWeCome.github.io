@article{HE2026103799,
  selected = {true},
  title    = {Towards a foundation model for behavioral intention prediction through multi-source data fusion},
  journal  = {Information Fusion},
  volume   = {127},
  pages    = {103799},
  year     = {2026},
  issn     = {1566-2535},
  doi      = {https://doi.org/10.1016/j.inffus.2025.103799},
  url      = {https://www.sciencedirect.com/science/article/pii/S1566253525008619},
  author   = {Weikang He and Yunpeng Xiao and Tun Li and Rong Wang and Qian Li},
  keywords = {Behavioral intention prediction, Foundation models, Multi-source data fusion, Pre-trained language models, Low-rank adaptation},
  preview  = {behavioral-intention-foundation.jpg},
  abstract = {In recent years, some studies have attempted to build foundation models to predict user behavioral intentions across various scenarios. Existing methods typically involve two steps: first, using Pre-trained Language Models (PLMs) to convert user historical behaviors into semantic vectors; second, capturing latent user intentions through a behavioral sequence encoder. However, limitations still exist in this pipeline. Firstly, most studies directly fix the parameters of PLMs, making it difficult to optimize the generated semantic vectors for specific application scenarios. Even with fine-tuning PLMs considered, the huge model size brings computational burdens. To address this challenge, we introduce a Low-Rank Adaptation technique, which enhances the quality of semantic vectors by training two lightweight low-rank matrices while keeping the original parameters of PLMs frozen. Additionally, the semantic vectors generated by PLMs often exhibit anisotropy, which weakens the expressive power. To address this, we design a parameter whitening expert and a mixed observation expert module to achieve more isotropic semantic representations. Finally, there are significant differences in user behavior patterns across different domains, and such behavioral conflicts can limit the model's generalization ability. Therefore, during the pre-training phase, we introduce multi-domain negative sample fusion and design two contrastive learning tasks. By employing a multi-task learning strategy, we enhance the model's ability to handle multi-domain data. With these improvements, our model achieves stronger adaptability and accuracy in predicting user behavior across different domains.}
}

@article{10143372,
  author   = {He, Weikang and Xiao, Yunpeng and Li, Tun and Wang, Rong and Li, Qian},
  journal  = {IEEE Transactions on Neural Networks and Learning Systems},
  title    = {Interest HD: An Interest Frame Model for Recommendation Based on HD Image Generation},
  year     = {2024},
  volume   = {35},
  number   = {10},
  pages    = {14356-14369},
  keywords = {Behavioral sciences;Feature extraction;Data mining;Image synthesis;Recommender systems;Data models;Photography;Attention mechanism;high-definition (HD) interest portrait;interest frame;recommendation;sequential recommendation},
  doi      = {10.1109/TNNLS.2023.3278673},
  selected = {true},
  preview  = {interest-hd-model.jpg},
  abstract = {This work is inspired by high-definition (HD) image generation techniques. When the user's interests are viewed as different frames of varying clarity, the unclear parts of one interest frame can be clarified by other interest frames. The user's overall HD interest portrait can be viewed as a fusion of multiple interest frames through detail compensation. Based on this inspiration, we propose a model for generating HD interest portrait called interest frame for recommendation (IF4Rec). First, we present a fine-grained pixel-level user interest mining method, Pixel embedding (PE) uses positional coding techniques to mine atomic-level interest pixel matrices in multiple dimensions, such as time, space, and frequency. Then, using an atomic-level interest pixel matrix, we propose Item2Frame to generate several interest frames for a user. The similarity score of each item is calculated to fill the multi-interest pixel clusters, through an improved self-attention mechanism. Finally, stimulated by HD image generation techniques, we initially present an interest frame noise compensation method. By utilizing the multihead attention mechanism, pixel-level optimization and noise complementation are performed between multi-interest frames, and an HD interest portrait is achieved. Experiments show that our model mines users' interests well. On five publicly available datasets, our model outperforms the baselines.}
}


@article{11206352,
  author   = {He, Weikang and Xiao, Yunpeng and Zhao, Wanjing and Wang, Rong and Li, Qian},
  journal  = {IEEE Transactions on Computational Social Systems},
  title    = {Disentangling Temporal Evolution in Frequency Domain for Sequential Recommendation},
  year     = {2025},
  volume   = {},
  number   = {},
  pages    = {1-17},
  keywords = {Frequency-domain analysis;Recommender systems;Time-domain analysis;Fourier transforms;Complexity theory;Adaptation models;Time-frequency analysis;Kernel;Hands;Feature extraction;Joint learning;recommender systems;sequential recommendation;temporal evolution},
  doi      = {10.1109/TCSS.2025.3611999},
  selected = {true},
  preview  = {temporal-evolution-tcss.jpg},
  abstract = {Sequential recommendation systems aim to predict users' next interactions based on their historical behavior sequences. Traditional approaches primarily focus on time-domain analysis, but often struggle to capture complex temporal patterns and long-term dependencies. In this work, we propose a novel frequency-domain approach to disentangle temporal evolution patterns in sequential recommendation. Our method leverages Fourier transform techniques to decompose user behavior sequences into different frequency components, enabling the model to capture both short-term and long-term temporal dynamics simultaneously. We design a joint learning framework that combines time-domain and frequency-domain representations to enhance recommendation accuracy. Through comprehensive experiments on multiple real-world datasets, we demonstrate that our approach significantly outperforms existing state-of-the-art methods in capturing temporal evolution patterns and improving recommendation quality. The frequency-domain analysis provides new insights into user behavior patterns and offers a promising direction for future sequential recommendation research.}
}

@article{11121654,
  selected = {true},
  author   = {He, Weikang and Xiao, Yunpeng and Mou, Xuemei and Li, Tun and Wang, Rong and Li, Qian},
  journal  = {IEEE Transactions on Computational Social Systems},
  title    = {An Information Diffusion Prediction Model Aligning Multiple Propagation Intentions With Dynamic User Cognition},
  year     = {2025},
  volume   = {},
  number   = {},
  pages    = {1-16},
  keywords = {Cognition;Information diffusion;Diffusion processes;Predictive models;Uncertainty;Training;Focusing;Cultural differences;Convolution;Complexity theory;Dynamic user cognition;information diffusion prediction;multiple propagation intentions;self attention},
  doi      = {10.1109/TCSS.2025.3521654},
  preview  = {dynamic-cognition-tcss.jpg},
  abstract = {Understanding information diffusion mechanisms is crucial for various applications, from viral marketing to public health campaigns. Traditional approaches primarily focus on network structure analysis, but often overlook the psychological and cognitive factors that drive human information sharing behaviors. In this work, we propose a novel information diffusion prediction model that simultaneously considers multiple propagation intentions and dynamic user cognition patterns. Our model captures how users' cognitive states evolve during information exposure and how different propagation intentions (such as awareness, persuasion, and adoption) interact with these cognitive dynamics. Through comprehensive experiments on real-world social media datasets, we demonstrate that our approach significantly outperforms existing methods in predicting information diffusion patterns. The model's ability to incorporate psychological insights makes it particularly valuable for understanding complex social phenomena and designing more effective information dissemination strategies.}
}
